{
  "name": "instantly-mcp",
  "version": "1.0.8-beta.1",
  "description": "Streamlined MCP server for Instantly v2 API with Zod v4 validation, bulletproof campaign creation, and enhanced error handling",
  "keywords": [
    "mcp",
    "instantly",
    "api",
    "email",
    "automation"
  ],
  "license": "MIT",
  "author": "bcharleson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcharleson/Instantly-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/bcharleson/Instantly-MCP/issues"
  },
  "homepage": "https://github.com/bcharleson/Instantly-MCP#readme",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "publish:beta": "npm run build && npm publish --tag beta",
    "prepublishOnly": "npm run build",
    "check-tools": "tsx check-tools.ts",
    "publish:sdk": "npm run build --workspace packages/instantly-sdk && npm publish --access public --workspace packages/instantly-sdk"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.27.5",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.6",
    "@types/babel__traverse": "^7.20.7",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
