{
  "name": "instantly-mcp",
  "version": "1.1.0",
  "description": "Multi-transport MCP server for Instantly.ai with stdio, SSE, and DXT support. Features bulletproof pagination, one-click installation, and comprehensive email automation tools.",
  "keywords": [
    "mcp",
    "instantly",
    "api",
    "email",
    "automation",
    "sse",
    "dxt",
    "claude",
    "cursor"
  ],
  "license": "MIT",
  "author": "bcharleson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcharleson/Instantly-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/bcharleson/Instantly-MCP/issues"
  },
  "homepage": "https://github.com/bcharleson/Instantly-MCP#readme",
  "type": "module",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "files": [
    "dist",
    "manifest.json",
    "icon.png",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:sse": "node dist/sse-server.js",
    "start:http": "node dist/http-server.js",
    "publish:beta": "npm run build && npm publish --tag beta",
    "prepublishOnly": "npm run build",
    "check-tools": "tsx check-tools.ts",
    "dxt:init": "dxt init",
    "dxt:pack": "dxt pack",
    "test:local": "node dist/index.js",
    "test:sse": "curl -H \"Accept: text/event-stream\" http://localhost:3000/sse"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "zod": "^3.25.0",
    "express": "^4.21.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@babel/parser": "^7.27.5",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.6",
    "@types/babel__traverse": "^7.20.7",
    "@types/node": "^20.0.0",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dxt": {
    "compatible": true,
    "version": "0.1"
  }
}
