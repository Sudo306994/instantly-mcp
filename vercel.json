{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp/(.*)",
      "dest": "/api/mcp.js"
    },
    {
      "src": "/health",
      "dest": "/api/mcp.js"
    },
    {
      "src": "/",
      "dest": "/api/mcp.js"
    }
  ]
}
